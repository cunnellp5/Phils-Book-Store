<form class="box center-block" method="post" action="/books/{{books.id}}/edit?_method=put">
  <div class="form-group">
    <label for="title">Title:</label>
    <input id="title" type="text" class="form-control" placeholder="Title" name="title" >
  </div>
  <div class="form-group">
    <label for="genera">Genera:</label>
    <input id="genera" type="text" class="form-control" placeholder="Genera" name="genera" >
  </div>
  <div class="form-group">
    <label for="imgurl">Img url:</label>
    <input id="imgurl" type="text" class="form-control" placeholder="Img url" name = "img" >
  </div>
  <b>Description:</b>
  <div class="form-group">
    <label for="description"></label>
    <textarea id="description" name="name" rows="8" cols="40" placeholder="Description" name="description" ></textarea>
  </div>

  <div class="flexMe">
  <label class="mr-sm-2" for="inlineFormCustomSelect"></label>
    <textarea name="name" rows="4" cols="20"></textarea>
  <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
    <span class="custom-control-indicator"></span>
  </label>
  <button type="delete" class="left_spacer btn btn-danger">Remove author</button>
</div>

  <label class="mr-sm-2" for="inlineFormCustomSelect"></label>
  <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
    <option selected>Author</option>
    <option value="1">One</option>
    <option value="2">Two</option>
    <option value="3">Three</option>
  </select>
  <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
    <span class="custom-control-indicator"></span>
  </label>
  <button type="submit" class="btn btn-primary">Update author</button>

  <button type="submit" class="bot box center-block btn btn-success">Update Book</button>
</form>
