
<div class="row">
    <div class="read btn btn-default row col-xs-2">
      <div class="col-xs-6">
        <img src="../images/authors.jpg" alt="authors" height="10%" width="97%">
      </div>
      <div class="col-xs-6">
        <p>Authors</p>
      </div>
    </div>
    <a href="./">
      <div class="read btn btn-default row col-xs-2">
        <div class="col-xs-6">
          <img src="../images/books.jpg" alt="books" height="10%" width="114%">
        </div>
        <div class="col-xs-6">
          <p>Books</p>
        </div>
      </div>
    </a>
</div>
  <a href="/books/new">
    <button type="submit" class="bot box center-block btn btn-success">Add Book</button>
  </a>
{{#each books}}
<hr>
  <div class="row spacer">
    <div class="col-xs-2">
    </div>
    <div class="col-xs-2">
      <img class="book_cover" src="{{img}}" alt="book covers">
    </div>
    <div class="col-xs-6">
      <input class="space pull-right btn btn-danger" type="button" value="Delete">
      <input class="space pull-right btn btn-info" type="button" value="Edit">
      <h2>{{title}}</h2>
      <h4>{{genera}}</h4>
      <p>{{description}}</p>
    </div>
  </div>
{{/each}}
